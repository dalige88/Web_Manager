@using Web.Manager.WebManager.Entity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "EditWttPage";
}
@await Html.PartialAsync("_nav", new WebManager.Core.Entity.NavigationModel("发帖管理", "YouTuBe视频管理", "编辑视频", true))
<div class="row bgwhitebox10 mymgb15">
    <div class="mysearchbox">
        <label>编辑视频</label>
        <div class="mycl"></div>
    </div>
    <div class="row mt30 mtop15">
        <input id="id" type="hidden" value="@Model.Id" />
        <div class="row rowmb15">
            <div class="col-md-12">
                <label class="col-sm-3 edit-group-label"><span class="spanrequired">*</span>英文标题：</label>
                <div class="col-sm-5">
                    <input class="form-control" id="yw_title" name="yw_title" type="text" value="@Model.YwTitle" maxlength="200" />
                </div>
            </div>
        </div>

        <div class="row rowmb15">
            <div class="col-md-12">
                <label class="col-sm-3 edit-group-label"><span class="spanrequired">*</span>中文标题：</label>
                <div class="col-sm-5">
                    <input class="form-control" id="zw_title" name="zw_title" type="text" value="@Model.ZwTitle" maxlength="200" />
                </div>
            </div>
        </div>

        <div class="row rowmb15">
            <div class="col-md-12">
                <label class="col-sm-3 edit-group-label"><span class="spanrequired">*</span>下载地址：</label>
                <div class="col-sm-5">
                    <textarea class="form-control" id="downloadurls" name="downloadurls">@Model.Downloadurls</textarea>
                </div>
            </div>
        </div>

        <div class="row rowmb15">
            <div class="col-md-12">
                <label class="col-sm-3 edit-group-label"><span class="spanrequired">*</span>下载状态：</label>
                <div class="col-sm-5">
                    <label>@Model.DownloadStateName</label>
                    @if (Model.Downloadstate == 1)
                    {
                        <label><input type="radio" value="1" name="downloadstate" class="downloadstate" checked /> 已下载 </label>
                        <label><input type="radio" value="0" name="downloadstate" class="downloadstate" /> 未下载</label>
                    }
                    else
                    {
                        <label><input type="radio" value="1" name="downloadstate" class="downloadstate" /> 已下载 </label>
                        <label><input type="radio" value="0" name="downloadstate" class="downloadstate" checked /> 未下载</label>
                    }
                </div>
            </div>
        </div>

        <div class="row rowmb15">
            <div class="col-md-12">
                <label class="col-sm-3 edit-group-label"><span class="spanrequired">*</span>发布状态：</label>
                <div class="col-sm-5">
                    <label>@Model.PostStateName</label>
                    @if (Model.Poststate == 1)
                    {
                        <label><input type="radio" value="1" name="Poststate" class="Poststate" checked /> 已发布 </label>
                        <label><input type="radio" value="0" name="Poststate" class="Poststate" /> 未发布</label>
                    }
                    else
                    {
                        <label><input type="radio" value="1" name="Poststate" class="Poststate" /> 已发布 </label>
                        <label><input type="radio" value="0" name="Poststate" class="Poststate" checked /> 未发布</label>
                    }

                </div>
            </div>
        </div>




        <div class="row" style="margin:20px 0px;">
            <div class="col-md-12">
                <label class="col-sm-3 edit-group-label"></label>
                <div class="col-sm-8">
                    <button id="btn_save" class="btn btn-primary">提交</button>
                    <button id="btn_cancel" class="btn btn-warning" onclick="history.go(-1)">取消</button>
                </div>
            </div>
        </div>

    </div>
</div>

@section JsExtend{
    <script type="text/javascript" src="@HtmlExtention.GetUrlContent("/Scripts/page/youtube/edit.js")"></script>
}

